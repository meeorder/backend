{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/@nestjs/cli/bin/nest.js",
      "args": ["start", "--watch"],
      "console": "integratedTerminal",
      "runtimeVersion": "18",
      "env": {
        "NODE_ENV": "development",
        "PORT": "4000",
        "MONGO_URI": "mongodb://localhost:27017",
        "MONGO_DB_NAME": "meeorder"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug E2E (Cucumber)",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/@cucumber/cucumber/bin/cucumber.js",
      "args": [],
      "console": "integratedTerminal",
      "runtimeVersion": "18",
      "env": {
        "NODE_ENV": "development",
        "MONGO_URI": "mongodb://localhost:27017/meeorder",
        "BASE_URL": "http://127.0.0.1:4000",
        "MONGO_DB_NAME": "meeorder"
      },
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
